# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Project A - Domain rotation (Account 1)
PROJECT_A_TOKEN=your_vercel_api_token_for_account_a
PROJECT_A_ID=prj_xxx
PROJECT_A_TEAM_ID=                # Optional - only if Project A is on a team account

# Project B - Env var update (Account 2)
PROJECT_B_TOKEN=your_vercel_api_token_for_account_b
PROJECT_B_ID=prj_yyy
PROJECT_B_TEAM_ID=                # Optional - only if Project B is on a team account
PROJECT_B_DEPLOY_HOOK=            # Optional - Deploy Hook URL for auto-redeploy

# Domain config
NEW_DOMAIN=                       # Optional - leave empty to auto-generate random domain
ENV_VAR_KEY=API_DOMAIN           # Env var key to update in Project B

# Telegram webhook config
TELEGRAM_BOT_TOKEN=              # Optional - Telegram bot token for webhook activation
WEBHOOK_WAIT_SECONDS=60          # Seconds to wait after redeploy before activating webhook
